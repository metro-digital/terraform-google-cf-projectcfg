remote_state {
  backend = "gcs"
  config = {
    bucket = "${GCS_BUCKET}"
    prefix = "buckets/terraform-state"
  }
  generate = {
    path      = "tf-backend.tf"
    if_exists = "overwrite_terragrunt"
  }
}

locals {
  module_url     = "git::https://github.com/metro-digital/terraform-google-cf-bucket.git"
  module_version = "latest"
}

terraform {
  source = "${local.module_url}///?ref=${local.module_version}"
}

# Protect module from being accidentally destroyed
prevent_destroy = true

include {
  path = find_in_parent_folders()
}

# Dependencies between modules
dependencies {
  paths = [
    "${get_parent_terragrunt_dir()}/project-cfg",
  ]
}

# Outputs from dependent modules
dependency "project-cfg" {
  config_path = "${get_parent_terragrunt_dir()}/project-cfg"
}

inputs = {
  project_id     = dependency.project-cfg.outputs.project_id
  name           = "${GCS_BUCKET}"
  location       = "EU"
  storage_class  = "MULTI_REGIONAL"
  uniform_access = true
  versioning     = true

  lifecycle_rules = [
    {
      action = {
        type          = "Delete"
      },
      condition = {
        num_newer_versions                   = 30
      }
    }
  ]
}
