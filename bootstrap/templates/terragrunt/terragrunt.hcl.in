terraform {
  # we run up to 10 terraform commands at once via terragrunt
  # the default terraform parallelism of 10 can result in issues with the google APIs (too many requests and such)
  # exporting TG_TF_PARALLELISM to lower will reduce the parallelism for each terraform command
  extra_arguments "parallelism" {
    commands  = get_terraform_commands_that_need_parallelism()
    arguments = ["-parallelism=${get_env("TG_TF_PARALLELISM", "10")}"]
  }

  # Error marker for terraform commands
  after_hook "create_error_marker_terraform" {
    commands     = ["init", "apply", "plan", "output"]
    execute      = ["touch", "${get_terragrunt_dir()}/${upper(get_terraform_command())}.ERROR"]
    run_on_error = true
  }

  after_hook "delete_error_marker_terraform" {
    commands     = ["init", "apply", "plan", "output"]
    execute      = ["rm", "-f", "${get_terragrunt_dir()}/${upper(get_terraform_command())}.ERROR"]
    run_on_error = false
  }

  # Error marker for terragrunt command
  after_hook "create_error_marker_terragrunt" {
    commands     = ["init-from-module"]
    execute      = ["touch", "${get_terragrunt_dir()}/TGINIT.ERROR"]
    run_on_error = true
  }

  after_hook "delete_error_marker_terragrunt" {
    commands     = ["init-from-module"]
    execute      = ["rm", "-f", "${get_terragrunt_dir()}/TGINIT.ERROR"]
    run_on_error = false
  }
}
